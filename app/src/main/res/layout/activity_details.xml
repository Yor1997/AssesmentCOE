        <TextView
            android:id="@+id/tv_Type_Car2_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/voertuigsoort"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Type_Car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_Brand_Car2_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/merk"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Brand_Car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_Model_Car2_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/handelsbenaming"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Model_Car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ModelType_Car2_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/inrichting"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ModelType_Car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_Seats_Car2_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/zitplaatsen"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Seats_Car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_Color_Car2_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/kleur"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Color_Car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_Price_Car2_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/catalogusprijs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Price_Car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_Doors_Car2_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/Deuren"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Doors_Car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>