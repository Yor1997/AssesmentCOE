<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:left="0dp" android:right="50dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="7dp" android:bottomLeftRadius="7dp"/>
            <solid android:color="@color/licenseplate_blue" />
            <stroke android:width="2dp" android:color="#000000" />
        </shape>
    </item>

    <item android:left="50dp" android:right="0dp">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="7dp" android:bottomRightRadius="7dp"/>
            <solid android:color="@color/licenseplate_yellow" />
            <stroke android:width="2dp" android:color="#000000" />
        </shape>
    </item>

</layer-list>